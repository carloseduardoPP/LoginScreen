<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="4"
        android:layout_column="1"
        android:background="#E1DEC3"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:context=".LoginActivity">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMyLogin"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etUser"
            style="@style/textEditText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:autofillHints="username"
            android:drawableEnd="@drawable/baseline_arrouba"
            android:gravity="bottom"
            android:hint="@string/user"
            android:inputType="text|textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/etPassword"
            style="@style/textEditText"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:autofillHints="password"
            android:drawableEnd="@drawable/baseline_key_24"
            android:gravity="bottom"
            android:hint="@string/password"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/etUser"
            app:passwordToggleEnabled="false" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            app:layout_constraintTop_toBottomOf="@id/etPassword" />

        <LinearLayout
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="invisible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rpName"
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rpAge"
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsAge" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rpEmail"
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsEmail" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMessage"
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>