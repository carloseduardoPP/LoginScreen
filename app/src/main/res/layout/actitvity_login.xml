<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_row="4"
        android:layout_column="1"
        android:background="#E1DEC3"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvMyLogin"
            style="@style/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/app_name" />

        <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etUser"
                style="@style/textEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="@string/user"
                android:layout_marginTop="20dp"
                android:autofillHints="username"
                android:gravity="bottom"
                android:inputType="text|textPersonName"
                android:drawableEnd="@drawable/baseline_arrouba"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPassword"
                style="@style/textEditText"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:hint="@string/password"
                android:layout_marginTop="20dp"
                android:autofillHints="password"
                android:gravity="bottom"
                android:inputType="textPassword"
                android:drawableEnd="@drawable/baseline_key_24"
                app:passwordToggleEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etUser"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            style="@style/Button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:text="@string/login"
            app:layout_constraintTop_toBottomOf="@id/etPassword" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvWarning"
            style="@style/warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            tools:ignore="ExtraText"
            tools:text="@string/instruction" />

        <LinearLayout
            android:id="@+id/response"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsName" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsAge" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/response"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rpsEmail" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>